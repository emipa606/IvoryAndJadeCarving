<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="LotRE_DeerMallornKindHorn"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName="AYTallow"]</xpath>
      <success>Always</success>
      <match Class="PatchOperationAdd">
        <xpath>/Defs</xpath>
        <value>
          <ThingDef ParentName="IvoryEngraved">
            <defName>LorienAntlerChandelier</defName>
            <label>lórien antler chandelier</label>
            <description>A large chandelier made from the antlers of lórien.</description>
            <graphicData>
              <texPath>Things/Item/Special/CaribouAntlerChandelier</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <drawSize>(3,3)</drawSize>
            </graphicData>
            <size>(2,2)</size>
            <tickerType>Normal</tickerType>
            <statBases>
              <MarketValue>1200</MarketValue>
              <MaxHitPoints>200</MaxHitPoints>
              <Mass>8</Mass>
              <Flammability>0.15</Flammability>
              <Beauty>40</Beauty>
            </statBases>
            <comps>
              <li Class="CompProperties_Refuelable">
                <fuelConsumptionRate>1</fuelConsumptionRate>
                <fuelCapacity>60.0</fuelCapacity>
                <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
                <fuelFilter>
                  <thingDefs>
                    <li>AYTallow</li>
                  </thingDefs>
                </fuelFilter>
                <destroyOnNoFuel>false</destroyOnNoFuel>
                <initialFuelPercent>1</initialFuelPercent>
              </li>
              <li Class="CompProperties_Flickable" />
              <li Class="CompProperties_Glower">
                <glowRadius>10</glowRadius>
                <glowColor>(252,187,113,0)</glowColor>
              </li>
              <li Class="CompProperties_HeatPusher">
                <heatPerSecond>0.5</heatPerSecond>
                <heatPushMaxTemperature>23</heatPushMaxTemperature>
              </li>
              <li Class="CustomLights.CompProperties_CustomLights">
                <lightSize>0.05</lightSize>
                <lightOffsets>
                  <li>(0.77,0.1,-0.2)</li>
                  <li>(-0.81,0.1,-0.2)</li>
                  <li>(0.48,0.1,-0.17)</li>
                  <li>(-0.43,0.1,-0.17)</li>
                  <li>(0.31,0.1,0.32)</li>
                  <li>(-0.28,0.1,0.30)</li>
                </lightOffsets>
              </li>
            </comps>
            <placeWorkers>
              <li>CustomLights.PlaceWorker_IsUnderRoof</li>
            </placeWorkers>
          </ThingDef>
          <RecipeDef ParentName="IvoryEngraving">
            <defName>make_LorienAntlerChandelier</defName>
            <label>make lórien antler chandelier</label>
            <description>Make a lórien antler chandelier.</description>
            <jobString>making lórien antler chandelier</jobString>
            <ingredients Inherit="False">
              <li>
                <filter>
                  <thingDefs>
                    <li>LotRE_DeerMallornKindHorn</li>
                  </thingDefs>
                </filter>
                <count>8</count>
              </li>
              <li>
                <filter>
                  <thingDefs>
                    <li>AYTallow</li>
                  </thingDefs>
                </filter>
                <count>120</count>
              </li>
              <li>
                <filter>
                  <thingDefs>
                    <li>Cloth</li>
                  </thingDefs>
                </filter>
                <count>12</count>
              </li>
            </ingredients>
            <products>
              <LorienAntlerChandelier>1</LorienAntlerChandelier>
            </products>
            <fixedIngredientFilter>
              <thingDefs>
                <li>LotRE_DeerMallornKindHorn</li>
                <li>AYTallow</li>
                <li>Cloth</li>
              </thingDefs>
            </fixedIngredientFilter>
          </RecipeDef>
        </value>
      </match>
    </match>
  </Operation>
</Patch>